                <a name="" id="" class="btn btn-danger" href="/eliminar?id={{.Id}}" role="button">Eliminar</a>
                
                 </td>
            </tr>
      {{end}}
        </tbody>
    </table>
    <br/>
    <button type="submit" class="btn btn-success">Enviar calificaciones a cada estudiante</button> 
