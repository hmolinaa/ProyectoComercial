    <br/>

    <table class="table table-hover table-bordered"; overflow-x: auto">
        <thead>
            <tr  class="table-warning">
                <th>Id</th>
                <th>Nombre</th>
                <th>Cuenta</th>
                <th>Asignatura</th>
                <th>Parcial-1</th>
                <th>Parcial-2</th>
