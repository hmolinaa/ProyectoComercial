{{define "crear"}}
{{template "cabecera"}}

<div class="card">

    <div class="card-header"> Estudiantes </div>
    <div class="card-body">
        <form method = "post" action="/insertar">

        <div class="form-group">

        <div class="form-group">
          <label for="">Nombre</label>
          <input type="text"
            class="form-control" name="nombre" id="nombre" aria-describedby="helpId" placeholder="">
          <small id="helpId" class="form-text text-muted">Escribe el nombre</small>
        </div>

        <div class="form-group">
          <label for="">Cuenta</label>
          <input type="text"
            class="form-control" name="cuenta" id="cuenta" aria-describedby="helpId" placeholder="">
          <small id="helpId" class="form-text text-muted">Escribe numero de cuenta</small>
        </div>

        <div class="form-group">
          <label for="">Asignatura</label>
          <input type="text"
            class="form-control" name="asignatura" id="asignatura" aria-describedby="helpId" placeholder="">
          <small id="helpId" class="form-text text-muted">Nombre de la asignatura/small>
        </div>

        <div class="form-group">
          <label for="">Parcial_1</label>
          <input type="text"
            class="form-control" name="parcial1" id="parcial1" aria-describedby="helpId" placeholder="">
          <small id="helpId" class="form-text text-muted">Nota primer parcial</small>
        </div>
        <div class="form-group">
          <label for="">Parcial_2</label>
          <input type="text"
            class="form-control" name="parcial2" id="parcial2" aria-describedby="helpId" placeholder="">
          <small id="helpId" class="form-text text-muted">Nota segundo parcial</small>
        </div>
        <div class="form-group">
          <label for="">Parcial_3</label>
          <input type="text"
            class="form-control" name="parcial3" id="parcial3" aria-describedby="helpId" placeholder="">
          <small id="helpId" class="form-text text-muted">Nota tercer parcial</small>
        </div>

        <div class="form-group">
          <label for="">Nota Final</label>
          <input type="text"
            class="form-control" name="notafinal" id="notafinal" aria-describedby="helpId" placeholder="">
          <small id="helpId" class="form-text text-muted">Ingrese nota final</small>
        </div>

        <div class="form-group">
          <label for="">Correo</label>
          <input type="text"
            class="form-control" name="correo" id="correo" aria-describedby="helpId" placeholder="">
          <small id="helpId" class="form-text text-muted">Escribe su correo</small>
        </div>

        <button type="submit" class="btn btn-success">Agregar nuevo estudiante</button>
        <a name="" id="" class="btn btn-primary" href="/" role="button">Cancelar</a>
        </form>
    </div>

</div>
{{template "pie"}}
{{end}}

